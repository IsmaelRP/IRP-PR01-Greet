<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:textSize="7mm"
        android:text="@string/lbl_name"
        android:paddingTop="10mm"
        android:layout_gravity="center_horizontal"
        android:id="@+id/lblName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10mm"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:textSize="7mm"
        android:text="@string/lbl_surname"
        android:paddingTop="10mm"
        android:layout_gravity="center_horizontal"
        android:id="@+id/lblSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txt_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10mm"
        android:layout_gravity="center_horizontal" />

    <!--<CheckBox-->
        <!--android:id="@+id/checkbox_kindly"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/kindly"-->
        <!--android:onClick="onCheckboxClicked"/>-->

    <Button
        android:id="@+id/btn_greetings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_text"
        android:onClick="greetings"/>

    <EditText
        android:id="@+id/txt_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10mm"
        android:layout_gravity="center_horizontal" />



</LinearLayout>


